<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gamestoremanagement.controller.UserDashboardController">
    <Button layoutX="14.0" layoutY="296.0" onAction="#handleLogout" text="Logout" />
    <TableView fx:id="productTable" layoutX="14.0" layoutY="50.0" prefHeight="200.0" prefWidth="572.0">
        <columns>
            <TableColumn fx:id="nameColumn" text="Name" />
            <TableColumn fx:id="priceColumn" text="Price" />
            <TableColumn fx:id="quantityColumn" text="Quantity" />
        </columns>
    </TableView>
    <TextField fx:id="priceField" layoutX="165.0" layoutY="14.0" promptText="Price" />
    <TextField fx:id="searchField" layoutX="14.0" layoutY="14.0" promptText="Search by name..." />
    <Button layoutX="314.0" layoutY="14.0" onAction="#handleSearch" text="Search" />

    <Label fx:id="welcomeLabel" layoutX="14.0" layoutY="270.0" text="Welcome, User!" />
</AnchorPane>
